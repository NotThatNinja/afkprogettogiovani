---
import ButtonLink from './ButtonLink.astro';
---

<div class="hero">
    <video autoplay muted loop>
        <source src="/hero-video.mp4" />
    </video>
    <div class="hero-text">
        <h1>AFK PROGETTO GIOVANI</h1>
        <p>Lorem ipsum dolor sit amet.</p>
        <ButtonLink url="/chi-siamo">Scopri chi siamo <i class="fa-solid fa-chevron-right"></i></ButtonLink>
    </div>
</div>

<style>
    .hero {
        position: relative;
    }
    .hero video {
        width: 100%;
        height: 31.75rem;
        object-fit: cover;
    }
    .hero-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        white-space: nowrap;
    }
    /* These 2 margins are a workaround, I can't use flex because the button becomes full width, don't know why */
    .hero-text h1 {
        margin-bottom: var(--space-s);
        color: var(--white-2);
    }
    .hero-text p {
        margin-bottom: var(--space-m);
        color: var(--white-2);
    }
</style>
