                <Image src={chisiamoImage} alt="Una foto di noi" />
            </div>
        </section>
        <section class="section-light">
            <div>
                <h2>TEAM COMUNICAZIONE</h2>
                <Image src={chisiamoImage} alt="Una foto di noi" />
            </div>
