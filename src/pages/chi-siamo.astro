                <TimelineItem title="2022" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus ut aliquam dui. Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
                <TimelineItem title="2023" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus ut aliquam dui. Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
            </Grid>
            <Image src={laNostraStoriaImage} alt="Una foto di noi" />
        </section>
        <section class="section-light">
            <h2>TRASPARENZA</h2>
            <a href="#">Statuto dell'associazione AFK PROGETTO GIOVANI</a>    
        </section>
    </main>
</Layout>

<style>
    a {
        text-align: center;
        text-decoration: underline;
    }
</style>
