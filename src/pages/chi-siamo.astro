<style>
    #placeholder1 {
        height: 8.375rem;
    }
    #placeholder2 {
        height: 12rem;
    }

    a {
        text-align: center;
        text-decoration: underline;
    }

    .roadmap-title {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-self: center;
        gap: var(--space-s);
        width: max-content;
        padding: 0 var(--space-m);
        background: var(--white-1);
    }

    .icon-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-m);
    }
    .icon-list p {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: var(--space-s);
        color: var(--black-1);
    }
    .icon-list i {
        font-size: 1.5625rem;
    }
</style>
